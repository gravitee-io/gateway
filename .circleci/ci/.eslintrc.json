{
    "env": {
        "es6": true,
        "node": true
    },
    "ignorePatterns": ["dist/**/*"],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "project": "./tsconfig.json"
    },
    "extends": ["eslint:recommended", "prettier", "plugin:@typescript-eslint/recommended"],
    "plugins": ["@typescript-eslint"],
    "overrides": [
        {
            "files": ["src/**/*.ts"],
            "rules": {
                "@typescript-eslint/no-namespace": "off"
            }
        }
    ]
}
