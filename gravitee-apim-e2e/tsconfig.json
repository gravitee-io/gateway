{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "dom"],
    "types": ["./types", "cypress", "node", "node-fetch", "jsonwebtoken"],
    "baseUrl": ".",
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@fakers/*": ["ui-test/fixtures/fakers/*"],
      "@keys/*": ["ui-test/fixtures/keys/*"],
      "@model/*": ["ui-test/model/*"],
      "@commands/*": ["ui-test/commands/*"],
      "@client-conf/*": ["lib/configuration"],
      "@api-test-resources/*": ["<rootDir>/api-test/resources/$1"],
      "@lib/jest-utils": ["lib/jest-utils"],
      "@lib/gateway": ["lib/gateway"],
      "@lib/management": ["lib/management"],
      "@lib/wiremock": ["lib/wiremock"]
    }
  },
  "include": ["**/*.ts"]
}
