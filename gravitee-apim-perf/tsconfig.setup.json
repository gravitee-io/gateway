{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "lib": ["ES2020", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "removeComments": true,
    "resolveJsonModule": true,
    "target": "es2020",
    "typeRoots": ["./node_modules/@types"],
    "types": ["./types", "node", "node-fetch"],
    "paths": {
      "@management-fakers/*": ["lib/fixtures/management/*"],
      "@management-apis/*": ["lib/management-webclient-sdk/src/lib/apis/*"],
      "@client-conf/*": ["lib/configuration"],
      "@management-models/*": ["lib/management-webclient-sdk/src/lib/models/*"]
    }
  },
  "include": ["**/*.ts"]
}
